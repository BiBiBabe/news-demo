/* pages/my/index.wxss */
.page{
  min-height: 100vh;
  padding-bottom: 1rpx;
  background: rgba(220, 220, 220, 0.3)
}
.header_img{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10rpx;
}
.item_right{
  display: flex;
  align-items: center;
}

.list{
  background: #fff;
  margin-bottom: 20rpx;
}
.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,0.10);
  padding: 10rpx 20rpx;
  height: 72rpx;
}
.item:last-child{
  border: 0;
}
.item_title{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #272323;
  line-height: 44rpx;
}
.item_img{
  width: 26rpx;
  height: 26rpx;
  transform: rotate(90deg);
}
.item_switch{
}
.rate{
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.item_rate{
  font-size: 30rpx;
  color: #272323;
  line-height: 44rpx;
  margin-bottom: 20rpx;
}
.quit{
  background: #fff;
  justify-content: center;
}

.radio-group {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.radio {
  margin-left: 20rpx;
}

.item_text{
  display: inline-block;
  color: dodgerblue;
  padding-right: 10rpx;
}
.item_date{
  color: #272323;
}